<%layout('layouts/boilerplate')%>


<div class="row">
    <h1 class="text-center">ADDING USER DETAILS</h1>
    <div class="col-6 offset-4">
            <form action="/" method="post" class="row g-3" enctype="multipart/form-data">
                <div class="md-6">
                    <label for="name" class="form-label">Name</label>
                    <input type="text" class="form-control" id="name" name="name">
                  </div>
                <div class="md-6">
                  <label for="email" class="form-label">Email</label>
                  <input type="email" class="form-control" id="email" name="email">
                </div>
                <div class="md-6">
                  <label for="password" class="form-label">Password</label>
                  <input type="password" class="form-control" id="password" name="password">
                </div>
                <div class="md-6">
                    <label for="country" class="form-label">country</label>
                    <input type="text" class="form-control" id="country" name="country">
                  </div>
                <div class="md-6">
                  <label for="address" class="form-label">Address</label>
                  <textarea type="text" class="form-control" id="address" placeholder="1234 Main St" name="address"></textarea>
                </div>
                <div class="md-6">
                  <label for="number" class="form-label">number</label>
                  <input type="text" class="form-control" id="number" name="number">
                </div>
                <div class="md-6">
                    <label for="dob" class="form-label">dob</label>
                    <input type="text" class="form-control" id="dob" placeholder="DD/MM/YYYY" name="dob">
                  </div>
                  <div class="md-6">
                    <select class="form-select" aria-label="Disabled select example" name="gender">
                        <option selected>Select Gender</option>
                        <option value="male">Male</option>
                        <option value="female">Female</option>
                        <option value="Not preferred">Not preferred to say</option>
                      </select>
                  </div>
                  <div class="md-6">
                    <label for="image" class="form-label">Image</label>
                    <input type="file" class="form-control" id="image" placeholder="image url" name="image">
                  </div>
        
                <div class="col-12">
                  <button type="submit" class="btn btn-primary">Add</button>
                </div>
            </form>
    </div>
</div>

